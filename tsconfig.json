{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "jsx": "react-native",
    "noEmit": true,
    "moduleResolution": "node16",
    "customConditions": [
      "react-native"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "types": [
      "react",
      "react-native",
      "jest"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    "app/(tabs)/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
